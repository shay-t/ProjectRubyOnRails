
  <%= form_with(model: document) do |form| %>
<div class="d-flex mt-5 align-items-start " >
  <div class="mr-3 w-100" >

  <%if @is_edit%>
  <h1 class="mb-3" >Editing document</h1>
  <%else%>
  <h1 class="mb-3" >Nouveau document</h1>

  <%end%>
    <% if document.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

        <ul>
          <% document.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="input-group mb-3">
          <div class="input-group-prepend">
              <%= form.label :doc_type, class: "input-group-text"  %>
            <%= form.text_field :doc_type, class: "form-control" %>
          </div>
    </div>

    <div class="input-group mb-3">
          <div class="input-group-prepend">
              <%= form.label :titre, class: "input-group-text"  %>
            <%= form.text_field :titre, class: "form-control" %>
          </div>
    </div>
  
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <%= form.label :isbn, class: "input-group-text"  %>
          <%= form.text_field :isbn, class: "form-control" %>
        </div>
    </div>
  </div>

  <%if @is_edit%>
  <div class="w-100" >
    <h1 class="mb-3">Ajouter un auteur</h1>
     <%= select_tag(:auteur_id, options_for_select( [["Selectioner un auteur", 0]] +  @auteurs.map{ |auteur| [auteur.nom_prenom, auteur.id]}), class:"custom-select form-select form-select-lg") %>
  </div>

  <% end %>
  
    </div>
      <%= form.submit %>
  <% end %>
  
</div>