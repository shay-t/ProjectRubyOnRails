<div class="container mt-5">
  <div class="mb-5" >
    <div class="d-flex w-100 mb-2">
        <div class="w-25">ID:</div>
        <div><strong><%= @document.id %></strong> </div>
      </div>

    <div class="d-flex w-100 mb-2">
      <div class="w-25">Nom:</div>
      <div><strong><%= @document.doc_type %></strong> </div>
    </div>

    <div class="d-flex w-100 mb-2">
      <div class="w-25">Prenom:</div>
      <div><strong><%= @document.titre %></strong> </div>
    </div>

     <div class="d-flex w-100 mb-2">
      <div class="w-25">Prenom:</div>
      <div><strong><%= @document.isbn %></strong> </div>
    </div>
    
    <div class="d-flex w-100 mb-2">
      <div class="w-25">Auteurs:</div>
      <div><strong><% @auteurs.each do |auteur| %>
        <%= "#{auteur.nom_prenom}, " %>
      <% end %></strong></div>
    </div>

  </div>
  <div class="mb-2" >
     <%= link_to "Edit this document", edit_document_path(@document) %> |
      <%= link_to "Back to documents", documents_path %>
  </div>
   

    <%= button_to "Destroy this document", @document, method: :delete, class: "btn btn-outline-danger" %>
</div>
